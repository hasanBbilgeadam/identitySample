
@{
    ViewData["Title"] = "Register";
}
 @model SignUpViewModel
<h1>Register</h1>
 

<div class="alert alert-danger" asp-validation-summary="All">
</div>

<form asp-action="Register" method="post">

    <input asp-for="UserName" placeholder="UserName" /> <br />
    <span asp-validation-for="UserName"></span> <br />

    <input asp-for="Email" placeholder="Email" /> <br />
    <span asp-validation-for="Email"></span> <br />
    <input asp-for="Password" placeholder="Password" /> <br />
    <span asp-validation-for="Password"></span> <br />
    <button type="submit">Register</button>
</form>

@section Scripts{
    


        <script src="~/lib/jquery-validation/dist/jquery.validate.min.js" ></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>


 
}
